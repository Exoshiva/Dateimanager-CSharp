<Window x:Class="DateiManagerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Data Suite 2025" Height="600" Width="900"
        FontFamily="Segoe UI" FontSize="14">

    <Window.Resources>
        <SolidColorBrush x:Key="MainBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="InputBackground" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="TextBrush" Color="Black"/>
    </Window.Resources>

    <Grid Background="{DynamicResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>



        <TabControl Grid.Row="1" Margin="10">
            
            <TabItem Header="📂 Datei-Manager">
                <Grid Background="{DynamicResource CardBackground}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="*"/>    
                        <RowDefinition Height="Auto"/> 
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Label Content="Pfad:" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                        <TextBox x:Name="txtFilePath" Width="600" Margin="5,0,5,0" Padding="3" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextBrush}"/>
                        <Button x:Name="btnLoad" Content="Laden" Click="BtnLoad_Click" Padding="10,2" Background="#DDDDDD"/>
                    </StackPanel>

                    <TextBox x:Name="txtFileContent" Grid.Row="1" Margin="10" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" 
                             Background="{DynamicResource InputBackground}" 
                             Foreground="{DynamicResource TextBrush}"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Kopie erstellen" Margin="5" Padding="10,5" Background="LightBlue"/>
                        <Button Content="Speichern" Margin="5" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="🔐 Krypto-Labor">
                <Grid Background="{DynamicResource CardBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="10">
                        <Label Content="Eingabe / Klartext" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                        <TextBox x:Name="txtKryptoInput" Height="400" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                        <Label Content="Verfahren:" HorizontalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                        
                        <RadioButton x:Name="rbAES" GroupName="Krypto" Content="AES (Standard)" IsChecked="True" Margin="5" Foreground="{DynamicResource TextBrush}"/>
                        <RadioButton x:Name="rbPolybius" GroupName="Krypto" Content="Polybius" Margin="5" Foreground="{DynamicResource TextBrush}"/>
                        <RadioButton x:Name="rbPQC" GroupName="Krypto" Content="PQC Simulation" Margin="5" Foreground="{DynamicResource TextBrush}"/>
                        
                        <Separator Margin="10"/>
                        
                        <Button Content="Verschlüsseln ->" Click="BtnEncrypt_Click" Margin="5" Padding="5" Background="LightGreen"/>
                        <Button Content="&lt;- Entschlüsseln" Margin="5" Padding="5" Background="LightSalmon"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10">
                        <Label Content="Ausgabe / Geheimtext" FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                        <TextBox x:Name="txtKryptoOutput" Height="400" TextWrapping="Wrap" AcceptsReturn="True" 
                                 Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="🧠 Fragebogen">
                <Grid Background="{DynamicResource CardBackground}">
                    
                    <StackPanel x:Name="pnlStartMenu" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="Psychologisches Institut II" FontSize="20" HorizontalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                        <Label Content="Studie: Kognitive Fähigkeiten" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
                        <Separator Width="200" Margin="20"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Label Content="Probanden-ID:" Foreground="{DynamicResource TextBrush}"/>
                            <TextBox x:Name="txtProbandID" Width="100" Margin="5,0" Background="{DynamicResource InputBackground}" Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>
                        
                        <Button Content="Neuen Versuch starten" Click="BtnStartQuestionnaire_Click" FontSize="18" Padding="20,10" Margin="0,20,0,0" Background="#4CAF50" Foreground="White"/>
                        <Button Content="Statistik ansehen" Click="BtnStatistik_Click" Margin="0,10,0,0"/>
                    </StackPanel>

                    <Grid x:Name="pnlFrage" Visibility="Collapsed" Margin="20">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="lblFrageText" Text="Hier steht die Frage?" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,20" Foreground="{DynamicResource TextBrush}"/>
                            
                            <RadioButton x:Name="rbAntwort1" Content="Antwort A" FontSize="16" Margin="5" Foreground="{DynamicResource TextBrush}"/>
                            <RadioButton x:Name="rbAntwort2" Content="Antwort B" FontSize="16" Margin="5" Foreground="{DynamicResource TextBrush}"/>
                            <RadioButton x:Name="rbAntwort3" Content="Antwort C" FontSize="16" Margin="5" Foreground="{DynamicResource TextBrush}"/>

                            <Button Content="Weiter" Width="150" Height="40" Margin="0,20,0,0" Click="BtnWeiter_Click"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>