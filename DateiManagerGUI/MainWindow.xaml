<Window x:Class="DateiManagerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Data Suite 2025" Height="600" Width="900"
        FontFamily="Segoe UI" FontSize="14">

    <Grid Background="#F0F0F0">
        
        <TabControl Margin="10">
            
            <!-- TAB 1: DATEI MANAGER -->
            <TabItem Header="📂 Datei-Manager">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> 
                        <RowDefinition Height="*"/>    
                        <RowDefinition Height="Auto"/> 
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Label Content="Pfad:" VerticalAlignment="Center"/>
                        <!-- WICHTIG: Name ist jetzt txtFilePath (klein geschrieben) -->
                        <TextBox x:Name="txtFilePath" Width="600" Margin="5,0,5,0" Padding="3"/>
                        <!-- WICHTIG: Click Event hinzugefügt -->
                        <Button x:Name="btnLoad" Content="Laden" Click="BtnLoad_Click" Padding="10,2" Background="#DDDDDD"/>
                    </StackPanel>

                    <!-- WICHTIG: Name ist txtFileContent -->
                    <TextBox x:Name="txtFileContent" Grid.Row="1" Margin="10" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" Background="#FAFAFA"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Kopie erstellen" Margin="5" Padding="10,5" Background="LightBlue"/>
                        <Button Content="Speichern" Margin="5" Padding="10,5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: KRYPTO LABOR -->
            <TabItem Header="🔐 Krypto-Labor">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="10">
                        <Label Content="Eingabe / Klartext" FontWeight="Bold"/>
                        <TextBox x:Name="txtKryptoInput" Height="400" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                        <Label Content="Verfahren:" HorizontalAlignment="Center"/>
                        <!-- WICHTIG: Namen für die RadioButtons hinzugefügt -->
                        <RadioButton x:Name="rbAES" GroupName="Krypto" Content="AES (Standard)" IsChecked="True" Margin="5"/>
                        <RadioButton x:Name="rbPolybius" GroupName="Krypto" Content="Polybius" Margin="5"/>
                        <RadioButton x:Name="rbPQC" GroupName="Krypto" Content="PQC Simulation" Margin="5"/>
                        
                        <Separator Margin="10"/>
                        
                        <!-- WICHTIG: Click Event hinzugefügt -->
                        <Button Content="Verschlüsseln ->" Click="BtnEncrypt_Click" Margin="5" Padding="5" Background="LightGreen"/>
                        <Button Content="&lt;- Entschlüsseln" Margin="5" Padding="5" Background="LightSalmon"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10">
                        <Label Content="Ausgabe / Geheimtext" FontWeight="Bold"/>
                        <TextBox x:Name="txtKryptoOutput" Height="400" TextWrapping="Wrap" AcceptsReturn="True" Background="#F0F0F0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 3: FRAGEBOGEN -->
            <TabItem Header="🧠 Fragebogen">
                <Grid Background="White">
                    
                    <!-- BEREICH 1: Startmenü (Wird ausgeblendet wenn Test läuft) -->
                    <StackPanel x:Name="pnlStartMenu" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label Content="Psychologisches Institut II" FontSize="20" HorizontalAlignment="Center"/>
                        <Label Content="Studie: Kognitive Fähigkeiten" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
                        <Separator Width="200" Margin="20"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Label Content="Probanden-ID:"/>
                            <!-- Name hinzugefügt -->
                            <TextBox x:Name="txtProbandID" Width="100" Margin="5,0"/>
                        </StackPanel>
                        
                        <!-- Event hinzugefügt -->
                        <Button Content="Neuen Versuch starten" Click="BtnStartQuestionnaire_Click" FontSize="18" Padding="20,10" Margin="0,20,0,0" Background="#4CAF50" Foreground="White"/>
                        <Button Content="Statistik ansehen" Click="BtnStatistik_Click" Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- BEREICH 2: Die aktive Frage (Am Anfang unsichtbar) -->
                    <Grid x:Name="pnlFrage" Visibility="Collapsed" Margin="20">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="lblFrageText" Text="Hier steht die Frage?" FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,20"/>
                            
                            <RadioButton x:Name="rbAntwort1" Content="Antwort A" FontSize="16" Margin="5"/>
                            <RadioButton x:Name="rbAntwort2" Content="Antwort B" FontSize="16" Margin="5"/>
                            <RadioButton x:Name="rbAntwort3" Content="Antwort C" FontSize="16" Margin="5"/>

                            <Button Content="Weiter" Width="150" Height="40" Margin="0,20,0,0" Click="BtnWeiter_Click"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>